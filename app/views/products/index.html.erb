<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Price</th>
      <th>Status</th>
      <th>user_id</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.status %></td>
        <td><%= product.user_id %></td>
        <td><%= product.description %></td>
        <td>
        	<% if can? :show, product %>
        	<%= link_to t(:show), product %>
        	<% end %>
        </td>
        <td><%= link_to t(:edit), edit_product_path(product) %></td>
        <td><%= link_to t(:delete), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

